public class UpdateAccountRecordTypeBatch implements Database.Batchable<SObject> {

    // Fetch target RecordTypeId
    public static Id getTargetRecordTypeId() {
        return [SELECT Id FROM RecordType 
                WHERE SObjectType = 'Account' AND DeveloperName = 'Your_RecordType_Name' 
                LIMIT 1].Id;
    }

    public Database.QueryLocator start(Database.BatchableContext BC) {
        return Database.getQueryLocator([
            SELECT Id 
            FROM Account 
            WHERE ABC__c != null
        ]);
    }

    public void execute(Database.BatchableContext BC, List<Account> scope) {
        Id targetRTId = getTargetRecordTypeId();
        for (Account acc : scope) {
            acc.RecordTypeId = targetRTId;
        }
        update scope;
    }

    public void finish(Database.BatchableContext BC) {
        // Send an email notification after batch completes
        Messaging.SingleEmailMessage mail = new Messaging.SingleEmailMessage();
        mail.setToAddresses(new String[] { 'your-email@example.com' });  // Change to your actual email
        mail.setSubject('Batch Job Completed: Account RecordType Updated');
        mail.setPlainTextBody('The batch job to update Account RecordTypeId has successfully completed.');
        Messaging.sendEmail(new Messaging.SingleEmailMessage[] { mail });
    }
}
